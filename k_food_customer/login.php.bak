<?php
require_once 'config.php';
require_once 'includes/auth.php';

// Check if required columns exist
$checkColumns = $conn->query("
    SELECT COUNT(*) as column_count 
    FROM INFORMATION_SCHEMA.COLUMNS 
    WHERE TABLE_SCHEMA = DATABASE()
    AND TABLE_NAME = 'users' 
    AND COLUMN_NAME IN ('account_status', 'role_id', 'login_attempts')
");

$columnCount = $checkColumns->fetch_assoc()['column_count'];

// If we don't have all required columns, redirect to update script
if ($columnCount < 3) {
    header('Location: update_user_security.php');
    exit();
}

// Redirect if already logged in
if (isLoggedIn()) {
    header('Location: profile.php');
    exit();
}

// Initialize error message
$error = '';

// Process login form
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $username = sanitizeInput($_POST['username']);
    $password = $_POST['password'];
    
    // Validate input
    if (empty($username) || empty($password)) {
        $error = 'Please fill in all fields';
    } else {
        try {
            // First check for admin/crew account
            $roleCheck = $conn->prepare("SELECT role_id FROM users WHERE username = ? AND role_id <= 3");
            if (!$roleCheck) {
                throw new Exception("Failed to prepare role check query");
            }
            
            $roleCheck->bind_param("s", $username);
            if ($roleCheck->execute()) {
                $roleResult = $roleCheck->get_result();
                if ($roleResult->num_rows === 1) {
                    // This is an admin/crew account
                    error_log("Admin/Crew login attempt through customer portal - username: " . $username);
                    $roleCheck->close();
                    header('Location: ../kfood_admin/login.php?redirect=admin');
                    exit();
                }
            }
            $roleCheck->close();

            // Now check for customer account
            $stmt = $conn->prepare("
                SELECT user_id, password, account_status 
                FROM users 
                WHERE username = ? AND role_id = 4
            ");
            if (!$stmt) {
                throw new Exception("Failed to prepare login query");
            }

            $stmt->bind_param("s", $username);
            if (!$stmt->execute()) {
                throw new Exception("Failed to execute login query");
            }

            $result = $stmt->get_result();
            if ($result->num_rows === 1) {
                $user = $result->fetch_assoc();
                
                if ($user['account_status'] !== 'active') {
                    error_log("Login attempt on inactive account - username: " . $username);
                    $error = 'Account is not active. Please contact support.';
                } 
                else if (password_verify($password, $user['password'])) {
                    // Update login info
                    $updateStmt = $conn->prepare("
                        UPDATE users 
                        SET last_login = CURRENT_TIMESTAMP, 
                            login_attempts = 0 
                        WHERE user_id = ?
                    ");
                    
                    if ($updateStmt) {
                        $updateStmt->bind_param("i", $user['user_id']);
                        $updateStmt->execute();
                        $updateStmt->close();
                    }

                    // Set customer session
                    $_SESSION['user_id'] = $user['user_id'];
                    $_SESSION['role_id'] = 4;
                    $_SESSION['is_customer'] = true;
                    $_SESSION['last_activity'] = time();
                    
                    // Security measures
                    session_regenerate_id(true);

                    // Log successful login
                    error_log("Successful customer login - username: " . $username);

                    // Handle redirect
                    if (isset($_SESSION['redirect_after_login'])) {
                        $redirect = $_SESSION['redirect_after_login'];
                        unset($_SESSION['redirect_after_login']);
                        header('Location: ' . $redirect);
                    } else {
                        header('Location: index.php');
                    }
                    exit();
                } 
                else {
                    error_log("Failed login attempt (invalid password) - username: " . $username);
                    $error = 'Invalid username or password';
                }
            } 
            else {
                error_log("Failed login attempt (no customer account) - username: " . $username);
                $error = 'Invalid username or password';
            }
            
            $stmt->close();
        } 
        catch (Exception $e) {
            error_log("Login error: " . $e->getMessage());
            $error = 'A system error occurred. Please try again later.';
        }
    }
}
