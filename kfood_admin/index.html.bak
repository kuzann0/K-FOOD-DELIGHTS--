<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>K-Food Delights Admin</title>
    <link rel="stylesheet" href="css/admin_dashboard.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="logo-tab-icon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="css/admin_style.css" />
    <link rel="stylesheet" href="css/admin_enhancements.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <div class="sidebar">
        <div class="sidebar-header">
          <h2>K-Food Admin</h2>
          <button class="mobile-close">&times;</button>
        </div>
        <div class="sidebar-menu">
          <div class="nav-item active" data-page="dashboard">
            <i class="material-icons">dashboard</i>
            <span>Dashboard</span>
          </div>
          <div class="nav-item" data-page="orders">
            <i class="material-icons">shopping_cart</i>
            <span>Orders</span>
          </div>
          <div class="nav-item" data-page="products">
            <i class="material-icons">restaurant_menu</i>
            <span>Products</span>
          </div>
          <div class="nav-item" data-page="customers">
            <i class="material-icons">people</i>
            <span>Customers</span>
          </div>
          <div class="nav-item" data-page="settings">
            <i class="material-icons">settings</i>
            <span>Settings</span>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <div class="top-bar">
          <button class="mobile-menu-toggle">
            <i class="material-icons">menu</i>
          </button>
          <div class="search-bar">
            <i class="material-icons">search</i>
            <input type="text" placeholder="Search..." />
          </div>
          <div class="user-menu">
            <img
              src="assets/images/user-avatar.png"
              alt="User"
              class="avatar"
            />
            <div class="user-info">
              <span class="user-name">Admin User</span>
              <button class="logout-btn">Logout</button>
            </div>
          </div>
        </div>

        <div class="dashboard-content">
          <!-- Stats Cards -->
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-icon" style="background-color: #ff6666">
                <i class="material-icons">payments</i>
              </div>
              <div class="stat-details">
                <h3>Total Sales</h3>
                <p class="stat-value">â‚±0</p>
                <span class="stat-change positive">+15.3%</span>
              </div>
            </div>
            <div class="stat-card">
              <div class="stat-icon" style="background-color: #4caf50">
                <i class="material-icons">shopping_cart</i>
              </div>
              <div class="stat-details">
                <h3>Orders</h3>
                <p class="stat-value">0</p>
                <span class="stat-change positive">+8.2%</span>
              </div>
            </div>
            <div class="stat-card">
              <div class="stat-icon" style="background-color: #2196f3">
                <i class="material-icons">people</i>
              </div>
              <div class="stat-details">
                <h3>Customers</h3>
                <p class="stat-value">0</p>
                <span class="stat-change positive">+12.5%</span>
              </div>
            </div>
            <div class="stat-card">
              <div class="stat-icon" style="background-color: #ff9800">
                <i class="material-icons">inventory_2</i>
              </div>
              <div class="stat-details">
                <h3>Products</h3>
                <p class="stat-value">0</p>
                <span class="stat-change negative">-2.4%</span>
              </div>
            </div>
          </div>

          <!-- Filters -->
          <div class="filter-section">
            <div class="filter-form">
              <input
                type="text"
                class="search-input"
                placeholder="Search orders..."
              />
              <select class="status-filter">
                <option value="all">All Status</option>
                <option value="pending">Pending</option>
                <option value="processing">Processing</option>
                <option value="completed">Completed</option>
                <option value="cancelled">Cancelled</option>
              </select>
              <select class="date-filter">
                <option value="today">Today</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="year">This Year</option>
              </select>
              <button class="generate-report-btn">
                <i class="material-icons">download</i>
                Generate Report
              </button>
            </div>
          </div>

          <!-- Orders Table -->
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Customer</th>
                  <th>Product</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- Table content will be dynamically populated -->
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="pagination">
            <button class="prev-page" disabled>
              <i class="material-icons">chevron_left</i>
            </button>
            <div class="page-numbers">
              <span class="current-page">1</span> of
              <span class="total-pages">1</span>
            </div>
            <button class="next-page" disabled>
              <i class="material-icons">chevron_right</i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Template -->
    <div class="modal" id="orderModal" style="display: none">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Order Details</h2>
          <button class="close-modal">&times;</button>
        </div>
        <div class="modal-body">
          <!-- Modal content will be dynamically populated -->
        </div>
        <div class="modal-footer">
          <button class="modal-close">Close</button>
        </div>
      </div>
    </div>

    <script src="js/admin_script.js"></script>
  </body>
</html>
